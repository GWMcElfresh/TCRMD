Bootstrap: docker
From: mambaorg/micromamba:1.5.8

%labels
    Maintainer TCRMD
    Stage system_preparation
    Description "PDB cleaning (PDBFixer), protonation (PROPKA), solvation (OpenMM)"

%files
    envs/system_preparation.yaml /tmp/env.yaml
    tcrmd/ /app/tcrmd/
    tests/  /app/tests/
    pyproject.toml /app/pyproject.toml

%post
    micromamba install -y -n base -f /tmp/env.yaml && \
    micromamba clean --all --yes

%environment
    export PATH="/opt/conda/bin:$PATH"
    export MAMBA_ROOT_PREFIX="/opt/conda"

%runscript
    exec python "$@"

%test
    python -m pytest /app/tests/test_system_preparation.py -v --tb=short
